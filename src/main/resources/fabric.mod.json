{
	"schemaVersion": 1,
	"id": "quickinfo",

	"version": "${version}",
	"name": "QuickInfo",
	"description": "QuickInfo is a simple Fabric mod that which allows you to pin statistics and informations on your main HUD",
	"authors": [
		"Hugo-CASTELL"
	],
	"contact": {
		"sources": "https://github.com/Hugo-CASTELL/quickinfo",
		"issues": "https://github.com/Hugo-CASTELL/quickinfo/issues"
	},

	"license": "GPL-3.0",
	"icon": "assets/quickinfo/icon.png",

	"environment": "client",
	"entrypoints": {
		"client": [
			"dev.quickinfo.QuickInfoClient"
		]
	},

	"depends": {
		"fabricloader": ">=0.16.10",
		"minecraft": "~1.21.4",
		"java": ">=21",
		"fabric-api": "*"
	}
}